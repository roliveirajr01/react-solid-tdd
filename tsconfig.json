{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "strictNullChecks": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "rootDir": "src",
    "baseUrl": "src",
    "paths": { "@/*": ["*"] },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowJs": true,
    "isolatedModules": true,
    "types": ["node", "jest"]
  },
  "include": ["src", "**/*.spec.ts", "**/*.test.ts"],
  "exclude": ["node_modules", "public"]
}
